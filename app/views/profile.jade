extends ./layout.jade

block headerContent
    include ./includes/header.jade

block content
    .container
      .github-profile
        img(src='/public/img/gh-mark-32px.png', alt='github logo')
        p
          span ID: 
          span#profile-id.profile-value
        p
          span Username: 
          span#profile-username.profile-value
        p
          span Display Name: 
          span#display-name.profile-value
        p
          span Repositories: 
          span#profile-repos.profile-value
        a.menu(href='/') Home
        p#menu-divide |
        a.menu(href='/logout') Logout
    
block bottomScripts
    script(type='text/javascript', src='/controllers/userController.client.js')